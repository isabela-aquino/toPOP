<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.activity_registrar">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/voltarRegistrar"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="left"
                android:layout_marginStart="30dp"
                android:layout_marginTop="40dp"
                app:srcCompat="@drawable/ic_baseline_arrow" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="sans-serif-light"
                android:text="Registrar"
                android:textColor="#1E232C"
                android:textColorHint="#000000"
                android:textSize="30sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txtUsenamer"
                android:layout_width="300dp"
                android:layout_height="56dp"
                android:background="#4DE8ECF4"
                android:backgroundTint="#9A9B9F"

                android:hint="@string/prompt_username"
                android:inputType="textPersonName|text"
                android:paddingLeft="10dp"
                android:selectAllOnFocus="true" />

            <EditText
                android:id="@+id/txtEmail"
                android:layout_width="300dp"
                android:layout_height="56dp"
                android:layout_marginTop="15dp"
                android:background="#4DE8ECF4"
                android:backgroundTint="#9A9B9F"
                android:backgroundTintMode="src_in"
                android:focusable="true"

                android:hint="@string/prompt_email"
                android:inputType="text"
                android:paddingLeft="10dp"
                android:shadowColor="#000000" />

            <EditText
                android:id="@+id/txtPassword"
                android:layout_width="300dp"
                android:layout_height="56dp"
                android:layout_marginTop="15dp"
                android:background="#4DE8ECF4"
                android:backgroundTint="#9A9B9F"
                android:backgroundTintMode="src_in"
                android:focusable="true"
                android:hint="@string/prompt_password"
                android:inputType="textPassword"
                android:paddingLeft="10dp" />

            <EditText
                android:id="@+id/txtConfirmPassword"
                android:layout_width="300dp"
                android:layout_height="56dp"
                android:layout_marginTop="15dp"
                android:background="#4DE8ECF4"
                android:backgroundTint="#9A9B9F"
                android:backgroundTintMode="src_in"
                android:focusable="true"
                android:hint="@string/prompt_confirm_password"
                android:inputType="textPassword"
                android:paddingLeft="10dp" />

            <Button
                android:id="@+id/btnTelaRegistrar"
                android:layout_width="300dp"
                android:layout_height="56dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="#000000"
                android:text="Registrar"
                app:cornerRadius="8dp"
                app:iconTint="#000000" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Ou Registrar com:"
                android:textColor="#6A707C"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/imgbFacebook"
                    style="@android:style/Widget.DeviceDefault.ImageButton"
                    android:layout_width="105dp"
                    android:layout_height="56dp"
                    android:background="#FFFFFF"
                    android:backgroundTint="#FFFFFF"
                    app:srcCompat="@mipmap/ic_logofacebook_foreground" />

                <ImageButton
                    android:id="@+id/imgbGoogle"
                    android:layout_width="105dp"
                    android:layout_height="56dp"
                    android:layout_marginStart="8dp"
                    android:backgroundTint="#FFFFFF"
                    app:srcCompat="@mipmap/ic_logogoogle_foreground"
                    app:strokeColor="#000000"
                    app:strokeWidth="1dp"
                    tools:srcCompat="@mipmap/ic_logogoogle_foreground" />

                <ImageButton
                    android:id="@+id/imgbTwitter"
                    android:layout_width="105dp"
                    android:layout_height="56dp"
                    android:layout_marginStart="8dp"
                    android:backgroundTint="#FFFFFF"
                    app:srcCompat="@mipmap/ic_logotwiter_foreground"
                    app:strokeColor="#000000"
                    app:strokeWidth="1dp"
                    tools:srcCompat="@mipmap/ic_logotwiter_foreground" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="JÃ¡ tem conta?"
                    android:textColor="#1E232C" />

                <TextView
                    android:id="@+id/TvEntrarAgora"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:singleLine="false"
                    android:text="Entre agora"
                    android:textColor="#35C2C1" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>