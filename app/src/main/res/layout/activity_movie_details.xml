<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.activity_movie_details">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_navigation_menu" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/voltarMovieDetails"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="left"
                android:layout_marginStart="30dp"
                android:layout_marginTop="38dp"
                app:srcCompat="@drawable/ic_baseline_arrow" />

            <ImageView
                android:id="@+id/imageMovie"
                android:layout_width="283dp"
                android:layout_height="355dp"
                app:srcCompat="@mipmap/ic_movie_foreground" />

            <TextView
                android:id="@+id/tituloMovie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Orgulho e Preconceito"
                android:textColor="#000000"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/produtoraMovie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Universal Studio"
                android:textColor="#06070D" />

            <TextView
                android:id="@+id/sinopseMovie"
                android:layout_width="312dp"
                android:layout_height="86dp"
                android:layout_marginTop="10dp"
                android:text="Orgulho e preconceito é o livro mais famoso de Jane Austen e possui uma série de personagens inesquecíveis e um enredo memorável."
                android:textColor="#06070D"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnQueroAssisti"
                    android:layout_width="140dp"
                    android:layout_height="47dp"
                    android:layout_marginEnd="10dp"
                    android:backgroundTint="#000000"
                    android:text="Quero Assistir"
                    android:textColor="#FFFFFF"
                    android:textSize="10sp"
                    app:iconTint="#000000" />

                <Button
                    android:id="@+id/btnJaAssisti"
                    android:layout_width="140dp"
                    android:layout_height="47dp"
                    android:backgroundTint="#000000"
                    android:text="Já Assisti"
                    android:textColor="#FFFFFF"
                    android:textSize="10sp"
                    app:iconTint="#000000" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>