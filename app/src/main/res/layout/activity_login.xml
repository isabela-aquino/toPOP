<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarAlwaysDrawHorizontalTrack="false"
    android:scrollbarAlwaysDrawVerticalTrack="false"
    tools:context=".activity.activity_login">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <ImageView
        android:id="@+id/voltar3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_arrow" />

    <ImageButton
        android:id="@+id/imgbGoogle4"
        android:layout_width="105dp"
        android:layout_height="56dp"
        android:layout_marginStart="8dp"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/imgbFacebook4"
        app:layout_constraintStart_toEndOf="@+id/imgbFacebook4"
        app:srcCompat="@mipmap/ic_logogoogle_foreground"
        app:strokeColor="#000000"
        app:strokeWidth="1dp"
        tools:srcCompat="@mipmap/ic_logogoogle_foreground" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:singleLine="false"
        android:text="Entre agora"
        android:textColor="#35C2C1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView15"
        app:layout_constraintTop_toTopOf="@+id/textView15" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:fontFamily="sans-serif-light"
        android:text="Entrar"
        android:textColor="#1E232C"
        android:textColorHint="#000000"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/txtEmail"
        app:layout_constraintStart_toStartOf="@+id/txtEmail" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Ou Registrar com:"
        android:textColor="#6A707C"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/imgbGoogle4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnTelaEntrar"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/imgbFacebook4"
        style="@android:style/Widget.DeviceDefault.ImageButton"
        android:layout_width="105dp"
        android:layout_height="56dp"
        android:layout_marginTop="104dp"
        android:background="#FFFFFF"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/btnTelaEntrar"
        app:layout_constraintTop_toBottomOf="@+id/btnTelaEntrar"
        app:srcCompat="@mipmap/ic_logofacebook_foreground" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Esqueceu a senha?"
        android:textColor="#6A707C"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/btnTelaEntrar"
        app:layout_constraintTop_toBottomOf="@+id/btnTelaEntrar" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="NÃ£o tem conta?"
        android:textColor="#1E232C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.371"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgbFacebook4"
        app:layout_constraintVertical_bias="0.793" />

    <ImageButton
        android:id="@+id/imgbTwitter4"
        android:layout_width="105dp"
        android:layout_height="56dp"
        android:layout_marginStart="8dp"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/btnTelaEntrar"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imgbGoogle4"
        app:layout_constraintTop_toTopOf="@+id/imgbGoogle4"
        app:srcCompat="@mipmap/ic_logotwiter_foreground"
        app:strokeColor="#000000"
        app:strokeWidth="1dp"
        tools:srcCompat="@mipmap/ic_logotwiter_foreground" />

    <EditText
        android:id="@+id/txtPassword"
        android:layout_width="331dp"
        android:layout_height="56dp"
        android:layout_marginTop="8dp"
        android:background="#4DE8ECF4"
        android:backgroundTint="#9A9B9F"
        android:hint="@string/prompt_password"
        android:paddingLeft="10dp"
        android:selectAllOnFocus="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtEmail" />

    <EditText
        android:id="@+id/txtEmail"
        android:layout_width="331dp"
        android:layout_height="56dp"
        android:layout_marginTop="140dp"
        android:background="#4DE8ECF4"
        android:backgroundTint="#9A9B9F"
        android:hint="@string/prompt_email"
        android:paddingLeft="10dp"
        android:selectAllOnFocus="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnTelaEntrar"
        android:layout_width="331dp"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#000000"
        android:text="Entrar"
        app:cornerRadius="8dp"
        app:iconTint="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtPassword" />

</androidx.constraintlayout.widget.ConstraintLayout>